{
    "name": "typescript-project",
    "version": "1.0.0",
    "description": "A modern TypeScript project",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "pnpm run boot && env-cmd -- node dist/agent.js && pnpm run shutdown",
        "dev": "pnpm run boot && env-cmd -- tsx src/index.ts && pnpm run shutdown",
        "test": "vitest --run",
        "test:watch": "vitest --watch",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "check": "pnpm type-check && pnpm lint && pnpm test",
        "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/agent.js --format=esm",
        "boot": "docker compose up -d",
        "shutdown": "docker compose down",
        "clear:history": "rm -rf data/history.json"
    },
    "keywords": [
        "typescript",
        "node"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^24.1.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "env-cmd": "^10.1.0",
        "esbuild": "^0.25.8",
        "eslint": "^9.32.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "jiti": "^2.5.1",
        "prettier": "^3.6.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.3",
        "typescript": "^5.7.3",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "pnpm": {
        "neverBuiltDependencies": []
    },
    "dependencies": {
        "@mozilla/readability": "^0.6.0",
        "chalk": "^5.4.1",
        "cli-html": "^4.4.0",
        "jsdom": "^26.1.0",
        "openai": "^5.11.0",
        "openmeteo": "^1.2.0",
        "ora": "^8.2.0",
        "playwright": "^1.54.2"
    }
}